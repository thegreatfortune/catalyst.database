# 服务器配置
PORT=3001
NODE_ENV=development

# MongoDB配置
# 方式1：使用完整URI（推荐）
MONGODB_URI=mongodb+srv://username:password@cluster0.mongodb.net/retryWrites=true&w=majority&appName=database

# 方式2：使用分离参数
MONGODB_URI=cluster0.mongodb.net
MONGODB_USER=username
MONGODB_PASSWORD=password
MONGODB_APPNAME=database

# 安全配置
CORS_ORIGINS=http://localhost:3000
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100